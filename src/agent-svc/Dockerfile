FROM node:24-alpine AS builder

  WORKDIR /app

  # Copy package files
  COPY package*.json ./
  COPY tsconfig.json ./

  # Install dependencies
  RUN npm ci

  # Copy source code
  COPY src ./src

  # Build TypeScript
  RUN npm run build

# Production stage
FROM node:24-alpine

  WORKDIR /app

  # Copy package files
  COPY package*.json ./

  # Install production dependencies only
  RUN npm ci --only=production

  # Copy built files from builder
  COPY --from=builder /app/dist ./dist

  # Expose ports
  EXPOSE 3002

  # Run the application
  CMD ["node", "dist/index.js"]
